{
  "private": true,
  "name": "codepan",
  "productName": "CodePan",
  "description": "Play with JS/CSS/HTML so simple it hurts",
  "main": "src/index.js",
  "version": "0.0.0",
  "repository": {},
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint **/src/**/*.{vue,js}",
    "fix": "eslint **/src/**/*.{vue,js} --fix",
    "dev": "poi",
    "build": "poi build",
    "surge": "npm run build && surge -p dist -d codepan.surge.sh",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "eslintConfig": {
    "extends": [
      "vue-app"
    ],
    "rules": {
      "no-warning-comments": 0
    }
  },
  "devDependencies": {
    "babel-plugin-component": "^0.9.1",
    "eslint": "^3.19.0",
    "eslint-config-vue-app": "^1.2.1",
    "gh-pages": "^0.12.0",
    "offline-plugin": "^4.7.0",
    "poi": "^8.0.0-rc.1",
    "postcss-nested": "^1.0.1",
    "postcss-property-lookup": "^1.2.1",
    "raw-loader": "^0.5.1",
    "uglify-loader": "^2.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "babel-standalone": "^6.24.0",
    "browserified-pug": "^0.1.0",
    "codemirror": "^5.25.2",
    "element-ui": "^1.2.9",
    "emmet-codemirror": "emmetio/codemirror#webpack",
    "file-saver": "^1.3.3",
    "iframe": "^1.0.0",
    "jszip": "^3.1.3",
    "marked": "^0.3.6",
    "nprogress": "^0.2.0",
    "object-assign": "^4.1.1",
    "promise-polyfill": "^6.0.2",
    "vue": "^2.3.0",
    "vue-router": "^2.5.2",
    "vuex": "^2.3.1"
  }
}
